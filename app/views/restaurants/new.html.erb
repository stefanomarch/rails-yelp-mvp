<h1>new page</h1>
<div class="container">
  <h1 class="title">Create a new Restaurant</h1>

    <div class="task-card">
      <%= simple_form_for(@restaurant) do |f| %>
      <%= f.input :name%>
      <%= f.input :address%>
      <%= f.input :phone_number%>
      <%= f.select :category,Restaurant::CATEGORIES%>
      <%= f.input :rating%>
      <%= f.submit "create restaurant", class: "btn btn-primary"%>
      <% end %>
    </div>
</div>


